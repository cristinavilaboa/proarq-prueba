<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container">
	<div class="row" >
		<div class="col-md-3">
			<a href=<%= proyectos_path %>>
				<img class="img-responsive" src="http://res.cloudinary.com/proarq/image/upload/v1501698086/Logo_z6rlzd.png" alt="">
			</a>
		</div>
		<div class="col-md-9">
			<!-- Page Header -->
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">Proyectos</h1>
				</div>
			</div>
			<!-- /.row -->
			
			<% @proyectos.each_with_index do |proyecto, index| %>
				<% if index % 3 == 0 %>
					<!-- Projects Row -->
					<div class="row">
				<% end %>
				<div class="col-md-4 portfolio-item">
					<a href=<%= proyecto_path(proyecto.id) %>>
						<img class="img-responsive" src=<%= proyecto.portada%> alt="">
					</a>
					<h3>
						<a href=<%= proyecto_path(proyecto.id) %>>
							<%= proyecto.titulo %>
						</a>
					</h3>
					<p><%= proyecto.descripcion %></p>
					<% if user_signed_in? %>
						<%= link_to 'Edit', edit_proyecto_path(proyecto) %>
						<%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' } %>
					<% end %>
				</div>
				<% if index % 3 == 0 %>
					</div>
					<!-- /.row -->
				<% end %>
			 <% end %>
			 <br>
			<% if user_signed_in? %>
				<%= link_to 'New Proyecto', new_proyecto_path %>
			<% end %>
		</div>
	</div>
</div>
